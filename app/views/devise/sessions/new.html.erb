

<div class="parent">
  <div class="form-style-5">
  <form>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: "Email :", required: false, autofocus: true, placeholder: "nom@email.com" %>
            <%= f.input :password, label: "Mot de passe :", required: false, placeholder: "********" %>
            <%= f.input :remember_me,label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Accéder à mon compte" %>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>

  </form>
  </div>
</div>
