<div class="container">
  <h1> Bonjour <%= current_user.first_name %> </h1>
  <h3> Vous avez demandé un crédit de <strong><%= @credit.amount %></strong>  avec <strong><%= @credit.interest %></strong> d'intérêts
  </h3>
  <p>Le total des intérêts : <strong> <%= @total_amount%></strong></p>

              <!-- Le bouton Stripe -->

  <script src="https://checkout.stripe.com/checkout.js"></script>

  <button id="customButton">Je demande mon crédit </button>

  <script>
  var handler = StripeCheckout.configure({
    key: 'pk_test_wAxg6F5ab78qiBS4Jm8Iufrg',
    image: 'https://s13.postimg.org/ngsl9te87/peanut_stripe.png',
    locale: 'auto',
    token: function(token) {
      // You can access the token ID with `token.id`.
      // Get the token ID to your server-side code for use.
    }
  });

  document.getElementById('customButton').addEventListener('click', function(e) {
    // Open Checkout with further options:
    handler.open({
      name: 'Peanut',
      email: "<%= current_user.email %>",
      description: "<%= current_user.first_name %> <%= current_user.last_name %>",
      currency: 'eur',
      panelLabel: 'Valider',

    });
    e.preventDefault();
  });

  // Close Checkout on page navigation:
  window.addEventListener('popstate', function() {
    handler.close();
  });
  </script>

</div>





