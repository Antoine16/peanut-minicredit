<div class="banner-signup container-fluid text-center" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.1) 50%),url(https://static.pexels.com/photos/225025/pexels-photo-225025.jpeg); background-size: cover;">

  <div class="parent margin-clear col-sm-4 col-sm-offset-4 box">
    <div>
      <h5>
        Merci, rendez-vous bientôt dans votre boite mail pour le départ de Peanut !

      </h5>
    </div>
  </div>
  <div class="parent margin-clear col-sm-4 col-sm-offset-4 box">
    <div class="form-style-5 margin-side">

      <%= simple_form_for @borrower do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: "nom@email.com" %>
        </div>
        <div class="form-inputs">
          <%= f.input :comment, label: "Un avis", autofocus: true, placeholder: "Des commentaires ? Des suggestions ? Allez-y, c'est ici !" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Valider" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
