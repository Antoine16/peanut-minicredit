
<br><br><br><br>

<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <h1>Bonjour<strong> <%= current_user.first_name.capitalize %> </strong></h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <ul class="list-inline">
      <li>Formule Rendement<strong> <%= set_roi(@loans.last) %> </strong></li>
    </ul>
  </div>
</div>

<div id="message">

</div>

<div class="row">
  <ul class="list-inline">
    <li class="col-md-4 col-md-offset-1">
      <div class="card">
        <div class="card-capital-label" id="capital_freeze">Capital Peanut en cours</div>
        <div class="card-capital-value" id="capital_peanut">
          <%= @sum %>
        </div>
        <div class="card-last-loan"> Dernier versement effectué</div>
        <div class="card-last-loan-value"><%= @loans.last.capital %></div>
        <div class="card-interest-label">Dont dividendes</div>
        <div class="card-interest-value">708€</div>
      </div>
    </li>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#freeze">
      Freeze
    </button>
    <div class="modal fade" id="freeze" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Vous êtes sur le point d'mmobiliser votre capital</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Cliquez sur Confirmer pour que votre capital ne soit plus utilisé pour les credits Peanut. Cette action prendra effet immédiatement.
          </div>
          <div class="modal-footer">
            <ul class="list-inline">
              <li>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
              </li>
              <li>
                <%= simple_form_for @loan, url: freeze_path, remote: true do |f| %>
                <%= f.button :submit, value: "Confirmer", class: "btn btn-success" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cashout" data-whatever="@mdo">Cash out</button>
    <div class="modal fade" id="cashout" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Quel montant souhaitez vous récupérer?</h5>
          </div>
          <div class="modal-footer">
            <ul class="list-inline">
              <li>
                <button type="button" class="btn btn-secondary"  data-dismiss="modal">Annuler</button>
              </li>
              <li>
                <%= simple_form_for @loan, url: cash_out_path, remote: true do |f| %>
                <%= f.input :retrait, as: :integer, label: false %>
                <%= f.button :submit, value: "Valider votre retrait", class: "btn btn-success" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>


  </ul>
</div>

<div class="row">
  <ul class="list-inline">
    <li class="col-md-4 col-md-offset-1">
      <div class="card"></div>
      <div class="card-credits-label" >Capital engagé sur crédits</div>
      <div class="card-credits-value">1.682€</div>
      <div class="card-refundat-label">Date du dernier remboursement</div>
      <div class="card-refundat-value">25/03/2017</div>
    </li>
  </ul>
</div>





