<br><br><br><br>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h1 >Bonjour <strong><%= current_user.first_name.capitalize %>!</strong> </h1>
    <h3>
      Démarrez votre simulation. Renseignez le montant que vous souhaitez investir et le type de rendement recherché.
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="parent">
      <div class="form-style-5">
        <%= simple_form_for @loan do |f| %>
          <%= f.error_notification %>
          <%= f.input :capital, label: "Entrez votre montant:" %>
          <table class="table">
            <thead>
              <tr>
                <th>Formule</th>
                <th>Taux</th>
                <th>Risque</th>
                <th>Revenu Annuel</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Securité</td>
                <td>3%</td>
                <td>Faible</td>
                <td id="sécurité"></td>
              </tr>
               <tr>
                <td>Tranquilité</td>
                <td>6%</td>
                <td>Modéré</td>
                <td id="tranquilité"></td>
              </tr>
               <tr>
                <td>Dynamique</td>
                <td>9%</td>
                <td>Important</td>
                <td id="dynamique"></td>
              </tr>
            </tbody>
          </table>
          <div>
          <%= f.input :roi, as: :radio_buttons, collection: [ "Sécurité", "Tranquilité", "Dynamique" ], label: "Choisissez une formule:" %>

          <div class="call">
          <% if user_signed_in?%>
            <%= form_tag loans_path do %>
              <article>
                <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                <% end %>
              </article>

              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-image='https://s13.postimg.org/ngsl9te87/peanut_stripe.png'
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-description="Carte à débiter"
                      data-name="Peanut"
                      data-email="<%= current_user.email %>"
                      data-panel-label="Prêter mon argent"
                      data-label="Prêter mon argent"
                      data-currency="EUR"></script>
            <% end %>
          <% else %>
              <%= link_to "Connectez vous pour souscrire", new_user_session_path, class: "btn", id: "connect"%>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


